<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.noise_planet.noisecapture.Measurement"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout"
        android:id="@+id/graph_components_layout"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/linearLayout3"
            android:weightSum="1">

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="@string/no_valid_dba_value"
                android:id="@+id/textView_value_SL_i"
                android:textSize="60sp"
                android:paddingRight="20dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="-5dp"
                android:textStyle="normal"
                android:layout_gravity="top|left"
                android:gravity="top|right" />

            <FrameLayout
                android:layout_width="183dp"
                android:layout_height="61dp"
                android:id="@+id/Frame_Stat_SEL"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/SL_dBA"
                    android:id="@+id/textView9"
                    android:layout_gravity="left|bottom"
                    android:textColor="#0099CC"
                    android:textSize="15sp"
                    android:paddingTop="4dp"
                    android:gravity="left|bottom" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/measurement_dba_mean"
                    android:id="@+id/textView_title_Mean_i"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:gravity="left" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/measurement_dba_max"
                    android:id="@+id/textView_title_Max_i"
                    android:layout_gravity="right|top"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:gravity="left" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/measurement_dba_min"
                    android:id="@+id/textView_title_Min_i"
                    android:layout_gravity="left|top"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:gravity="left" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/no_valid_dba_value"
                    android:id="@+id/textView_value_Min_i"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/no_valid_dba_value"
                    android:id="@+id/textView_value_Max_i"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/no_valid_dba_value"
                    android:id="@+id/textView_value_Mean_i"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="4dp" />

            </FrameLayout>

        </LinearLayout>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/vumeter"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_below="@+id/textView_value_iSL" />

        <Chronometer
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer_recording_time"
            android:layout_gravity="center_horizontal"
            android:format="%s"
            android:textColor="@color/R1_SL_level"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="4dp"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp" />

        <org.noise_planet.noisecapture.Spectrogram
            android:id="@+id/spectrogram_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/spectrumChart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_below="@+id/vumeter" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <ImageButton android:id="@+id/recordBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:srcCompat="@drawable/button_record"
            android:scaleType="fitCenter"
            android:background="#00000000" />

        <ImageButton android:id="@+id/cancelBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:srcCompat="@drawable/button_cancel_disabled"
            android:scaleType="fitCenter"
            android:background="#00000000" />

        <ImageButton android:id="@+id/exportBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:srcCompat="@drawable/button_export_disabled"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:visibility="invisible" />

        <ImageButton android:id="@+id/historyBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:srcCompat="@drawable/button_history"
            android:scaleType="fitCenter"
            android:background="#00000000" />

        <ImageButton android:id="@+id/mapBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:srcCompat="@drawable/button_map"
            android:scaleType="fitCenter"
            android:background="#00000000" />

    </LinearLayout>

</RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/list_view_layout_width"
        android:layout_height="@dimen/list_view_layout_height"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>