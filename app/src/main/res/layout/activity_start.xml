<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.noise_planet.noisecapture.Start"
    android:background="#ffffffff"
    android:gravity="center_vertical|clip_vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_text_title"
            android:id="@+id/textView_title_start_activity"
            android:textSize="45sp"
            android:textColor="#0099CC"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_text_subtitle"
            android:id="@+id/textView_subtitle_start_activity"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="#0099CC"
            android:textSize="15sp" />
        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/progressBar"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_text_developed_by"
                android:id="@+id/textView_Power_by"
                android:textColor="#000"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="italic" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:id="@+id/imageView_CNRS"
                    android:src="@drawable/cnrs" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="2"
                    android:scaleY="1.8"
                    android:scaleX="1.8"
                    android:id="@+id/imageView_Ifsttar"
                    android:src="@drawable/ifsttar"/>

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_text_supported_by"
                    android:id="@+id/textView_Support_by"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/imageView_europe"
                        android:src="@drawable/europe"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:id="@+id/imageView_geopal"
                        android:src="@drawable/geopal"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_appversion"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>
